# PayPal NVP Dashboard Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=4000
HTTPS=false
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Client Configuration
CLIENT_ORIGIN=http://localhost:5173

# PayPal Configuration
PAYPAL_ENV=sandbox
PAYPAL_NVP_VERSION=204.0

# PayPal NVP API Endpoints
NVP_SANDBOX_URL=https://api-3t.sandbox.paypal.com/nvp
NVP_LIVE_URL=https://api-3t.paypal.com/nvp

# PayPal IPN Endpoints
IPN_SANDBOX_URL=https://ipnpb.sandbox.paypal.com/cgi-bin/webscr
IPN_LIVE_URL=https://ipnpb.paypal.com/cgi-bin/webscr

# Logging Configuration
LOG_BUFFER_SIZE=300